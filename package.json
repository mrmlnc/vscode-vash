{
  "name": "vscode-vash",
  "displayName": "Vash syntax",
  "description": "Vash integration for VS Code.",
  "preview": true,
  "version": "0.2.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.3.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-vash/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-vash"
  },
  "keywords": [
    "vash",
    "syntax",
    "highlight",
    "intellisense"
  ],
  "categories": [
    "Languages"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:vash"
  ],
  "contributes": {
    "languages": [{
      "id": "vash",
      "aliases": ["Vash", "vash"],
      "extensions": [".vash"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "vash",
      "scopeName": "text.html.vash",
      "path": "./syntaxes/vash.json"
    }]
  },
  "scripts": {
    "test": "xo && mocha **/*.spec.js"
  },
  "devDependencies": {
    "xo": "^0.16.0",
    "mocha": "^3.0.2",
    "vscode": "^0.11.17"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "babel/arrow-parens": [2, "always"],
      "babel/object-curly-spacing": [2, "always"],
      "babel/generator-star-spacing": [2, "after"],
      "xo/filename-case": ["error", { "case": "camelCase" }]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
