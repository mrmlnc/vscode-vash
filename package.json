{
  "name": "vscode-vash",
  "displayName": "Vash syntax",
  "description": "Vash integration for VS Code.",
  "preview": true,
  "version": "0.3.0",
  "publisher": "mrmlnc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.3.0"
  },
  "icon": "icon.png",
  "homepage": "https://github.com/mrmlnc/vscode-vash/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmlnc/vscode-vash"
  },
  "keywords": [
    "vash",
    "syntax",
    "highlight",
    "intellisense"
  ],
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:vash"
  ],
  "main": "./out/client",
  "contributes": {
    "languages": [{
      "id": "vash",
      "aliases": ["Vash", "vash"],
      "extensions": [".vash"],
      "configuration": "./syntaxes/language-configuration.json"
    }],
    "grammars": [{
      "language": "vash",
      "scopeName": "text.html.vash",
      "path": "./syntaxes/vash.json"
    }]
  },
  "scripts": {
    "test": "tslint src/**/*.ts && tsc && mocha out/**/*.spec.js"
  },
  "devDependencies": {
    "typescript": "^1.8.10",
    "tslint": "^3.15.1",
    "mocha": "^3.0.2",
    "vscode": "^0.11.17"
  },
  "dependencies": {
    "vscode-languageclient": "2.5.0",
    "vscode-languageserver": "2.5.0",
    "vscode-html-languageservice": "1.0.0-next.1"
  }
}
